<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.rajpusht.rajpusht.NaFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">






       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The respondent/ pregnant woman not available for interview"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/view2"
            android:layout_marginTop="4dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.1"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>
       <Spinner
           android:id="@+id/pw1_yesno"
           android:layout_width="match_parent"
           android:layout_height="35dp"
           android:paddingLeft="8dp"
           android:spinnerMode="dropdown"
           android:paddingRight="8dp"
           android:singleLine="true"
           android:textSize="13dp"
           android:visibility="invisible"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="5dp"
           android:gravity="center_vertical"/>
       <LinearLayout
           android:id="@+id/anetalcheck"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:padding="5dp"
           android:layout_marginBottom="4dp"
           android:orientation="horizontal">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=" The respondent/ pregnant woman not done antenatal checkup (ANC)"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
               android:textColor="@color/view2"
               android:layout_marginTop="4dp"
               android:layout_marginRight="3dp"
               android:layout_marginBottom="4dp"
               android:layout_weight="0.1"/>

           <CheckBox
               android:id="@+id/chcekedNAM"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:layout_weight="1"/>

       </LinearLayout>


   </LinearLayout>



</FrameLayout>
