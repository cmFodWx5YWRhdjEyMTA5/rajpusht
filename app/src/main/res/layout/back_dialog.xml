<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_shadow">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editCoupon"
        android:alpha="0.1"
        android:padding="@dimen/dimen_10dp"
        app:srcCompat="@drawable/logo_med" />

        <TextView
            android:id="@+id/editCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTextViewHeader"
            android:textSize="@dimen/text_18sp"
            android:typeface="monospace"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:hint="Do you want to exit  ?"
            android:padding="@dimen/text_10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editCoupon"
        android:padding="15dp">

        <ImageView
            android:id="@+id/no"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/yes"
            android:src="@drawable/ic_no"
            android:text="No"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/yes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="62dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_yes"
            android:text="yes"
            android:textSize="14dp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>
