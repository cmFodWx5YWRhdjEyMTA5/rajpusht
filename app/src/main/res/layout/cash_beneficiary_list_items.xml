<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_form"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView_beneficiary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:padding="@dimen/dimes_8dp"
                android:text="Sunita Ben"
                android:textSize="@dimen/textSize16sp" />

            <Button
                android:id="@+id/button_current_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/button_paid"
                android:alpha="0.9"
                android:text="PW2"
                android:clickable="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/my_button_white"
                android:textStyle="bold"
                android:textColor="@color/colorHalfBlack"
                android:text="2nd/N"
                android:clickable="false"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textViewAadharID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_beneficiary_name"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/textView_beneficiary_name"
                android:text="AadharID"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView_beneficiary_name"
                android:layout_alignStart="@+id/textViewAadharID"
                android:text="UserId"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>