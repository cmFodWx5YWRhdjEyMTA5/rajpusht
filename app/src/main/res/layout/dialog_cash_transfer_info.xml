<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_shadow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize16sp"
            android:background="@drawable/box_form"
            android:padding="@dimen/dimen_10dp"/>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/padding_50dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"
                app:srcCompat="@drawable/ic_installment_received" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="Installment Received"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/view_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView71"
                android:layout_width="@dimen/padding_50dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"
                app:srcCompat="@drawable/ic_form_submitted" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="Form Submitted"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/view_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/padding_50dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"
                app:srcCompat="@drawable/ic_due_payment" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"
                android:text="Due Payment"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/view_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="@dimen/padding_50dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"

                app:srcCompat="@drawable/ic_eligible_new" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="Eligible for new payment"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/view_divider"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/padding_50dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"

                app:srcCompat="@drawable/ic_rejected" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="Rejected"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/view_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/padding_50dp"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10dp"
                app:srcCompat="@drawable/ic_exit" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="Exit"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>