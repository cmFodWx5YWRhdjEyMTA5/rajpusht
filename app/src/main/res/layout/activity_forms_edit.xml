<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box_form">

    <include layout="@layout/toolbar_main"
        android:id="@+id/include" />

    <TextView
        android:id="@+id/textBeneForms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:text="Sunita Ben"
        android:gravity="left"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:background="@drawable/box_shadow"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimen_1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBeneForms"
        android:orientation="vertical"
        android:id="@+id/linearLayout5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@drawable/box_shadow"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="Form 1"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonForm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/my_button_color_primary"
                android:text="Edit"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@drawable/box_shadow"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="Form 2"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonForm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/my_button_color_primary"
                android:text="Edit"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@drawable/box_shadow"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="Form 3"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonForm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/my_button_color_primary"
                android:text="Edit"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@drawable/box_shadow"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="Form 4"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonForm4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/my_button_color_primary"
                android:text="Edit"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@drawable/box_shadow"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="Form 5"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonForm5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:background="@drawable/my_button_color_primary"
                android:text="Edit"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/my_button_flat"
        android:padding="@dimen/dimen_10dp"
        android:text="EXIT"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>